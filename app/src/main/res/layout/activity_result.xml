<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResultActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/deep_blue"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:contentDescription="@string/quiz_image"
        tools:src="@drawable/trophy1"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Congratulations "
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:gravity="center"
            android:id="@+id/resultHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="John"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>




    <TextView
        android:gravity="center"
        android:id="@+id/resultTvScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="You scored 3 out of 9"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/resultAdvice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/do_you_feel_confident"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="5dp"/>



    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/resultBtnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Finish"
        android:background="@drawable/finish_button_option_border_bg"
        />



</LinearLayout>